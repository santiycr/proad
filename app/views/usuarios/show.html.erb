<% content_for :title do %>
  <%= @usuario.nombre or @usuario.username %>
<% end %>

<% content_for :special_links do %>
  <%= link_to 'Editar', edit_proyecto_usuario_path(@proyecto, @usuario) %> |
  <%= link_to 'Nuevo Usuario', new_proyecto_usuario_path %>
<% end %>

<p>
  <b>Nombre:</b>
  <%= @usuario.nombre %>
  <br>
  <b>Rol:</b>
  <%= @usuario.get_rol %>
  <br>
  <b>Email:</b>
  <%= @usuario.email %>
</p>
