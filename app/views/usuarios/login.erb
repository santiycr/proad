<% content_for :title do %>
	Login
<% end %>

<%= form_tag("/login", :method => "post") do %>
  <%= label_tag(:username, "Usuario") %>
  <%= text_field_tag(:username) %><br/>
  <%= label_tag(:password, "Password") %>
  <%= password_field_tag(:password) %><br/>
  <%= submit_tag("Login") %>
<% end %>
